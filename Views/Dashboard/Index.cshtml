@model IEnumerable<MedicalTansik.Lib.InstantResult>
@{
    ViewBag.Title = "Index";
}


<div class="container-fluid py-4">
    <h4 class="text-center text-uppercase">التنسيق اللحظي</h4>

    <table class="table table-striped table-bordered">
        <thead class="bg-dark text-white">
            <tr>
                <td>الرغبات</td>
                <td>عدد الطلبه المسجلين حتي الان</td>
                <td>اسماء الطلاب</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.Desire.Name
                </td>
                <td><span class="badge badge-primary badge-pill">@item.Number</span></td>
               
                <td>
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-4">
                                <!-- Category -->
                                <div class="single category">
                                    <h3 class="side-title"> اسماء الطلبة</h3>
                                    <ul class="list-unstyled">
                                        @foreach (var i in item.Students)

                                        {
                                            <li><a href="" title="">@i.Name</a></li>
                                        }


                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                    <td>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            اسماء الطلبة
                        </button>
                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                            @foreach (var i in item.Students)

                            {  <a class="dropdown-item" href="#">@i.Name</a>
                            }

                        </div>
                    </div>
                   
                        @*<button type="button" class="btn btn-secondary" data-container="body" data-toggle="popover" data-placement="right" data-content=@foreach (var i in item.Students)
                            {
                            }>
                            اسماء الطلبة
                        </button>*@




                </td>

            </tr>

        }
        </tbody>
    </table>
</div>

@section Scripts{
<script>
    $(document).ready(
        $(function () {
            
            $('.example-popover').popover({
                 container: 'body'
            })
        })
    );

</script>
    }
